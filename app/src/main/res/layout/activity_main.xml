<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.features.intro.MainActivity"
    android:background="@drawable/gradient"
    >

    <ImageView
        android:layout_width="@dimen/_190dp"
        android:layout_height="@dimen/_190dp"
        android:src="@drawable/ic_launcher_solid"
        app:layout_constraintLeft_toLeftOf="@id/iv_tmdb_logo"
        app:layout_constraintRight_toRightOf="@id/iv_tmdb_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_220dp"
        />

    <ImageView
        android:id="@+id/iv_tmdb_logo"
        android:layout_width="@dimen/_100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/im_powered_by"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>