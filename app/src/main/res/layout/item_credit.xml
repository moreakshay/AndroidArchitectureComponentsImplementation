<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="credit"
            type="moreakshay.com.mine.ui.domain.Credit" />
        <variable
            name="size"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/_20dp"
        android:paddingBottom="@dimen/_10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_6dp"
            app:cardCornerRadius="@dimen/_6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_backdrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:imageUrl="@{credit.profile}"
                app:size="@{size}" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@{credit.name}"
            android:textAppearance="@style/TextItem"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/cv_poster"
            app:layout_constraintRight_toRightOf="@+id/cv_poster"
            app:layout_constraintTop_toBottomOf="@+id/cv_poster" />

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@{credit.job}"
            android:textAppearance="@style/TextItem"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/cv_poster"
            app:layout_constraintRight_toRightOf="@+id/cv_poster"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>